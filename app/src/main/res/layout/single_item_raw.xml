<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <androidx.cardview.widget.CardView
                android:id="@+id/cd6"
                android:layout_width="331dp"
                android:layout_height="160dp"
                android:layout_marginTop="15dp"
                app:cardCornerRadius="19dp"
                android:layout_marginBottom="15dp">

                <LinearLayout
                    android:id="@+id/back_groundlayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@drawable/bg6">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="-10dp"
                        android:orientation="horizontal"
                        >

                        <LinearLayout
                            android:layout_width="270dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/shoe_name_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="25dp"
                                android:layout_marginTop="40dp"
                                android:text="@string/shoe_six"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:textSize="15sp"
                                />

                            <TextView
                                android:id="@+id/shoe_type_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="34dp"
                                android:layout_marginTop="0dp"
                                android:text="@string/shoe_six"
                                android:textStyle="bold"
                                android:textColor="#776060"
                                android:textSize="10sp"
                                />


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView

                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="40dp"
                                    android:layout_marginTop="13dp"
                                    android:text="@string/coin"
                                    android:textColor="#000000"
                                    android:textSize="22sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/shoe_price_txt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="3dp"
                                    android:layout_marginTop="12dp"
                                    android:text="@string/shoe_price1"
                                    android:textColor="#000000"
                                    android:textSize="22sp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">





                            </LinearLayout>



                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1">



                            <ImageView
                                android:id="@+id/shoe_image"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="-0dp"
                                android:layout_marginLeft="5dp"
                                app:srcCompat="@drawable/w" />

                        </LinearLayout>






                    </LinearLayout>





                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </RelativeLayout>



    </LinearLayout>



</LinearLayout>