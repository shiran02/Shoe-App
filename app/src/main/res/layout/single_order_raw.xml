<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout
        android:id="@+id/order_detail_layout"
        android:layout_width="347dp"
        android:layout_height="200dp"
        android:layout_marginTop="-270dp"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/order_detail_pic"
                android:layout_width="120dp"
                android:layout_height="130dp"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="30dp"
                app:srcCompat="@drawable/l_pic" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-90dp"
                android:layout_marginTop="135dp"
                android:text="@string/coin"
                android:textColor="#000000"
                android:textSize="28sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/order_price_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="135dp"
                android:text="44"
                android:textColor="#000000"
                android:textSize="28sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">


        <TextView
            android:id="@+id/shoe_name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="0dp"
            android:text="@string/shoe_six"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="15sp"
            />
        <TextView
                android:id="@+id/shoe_type_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="@string/shoe_six"
                android:textStyle="bold"
                android:textColor="#776060"
                android:textSize="10sp"
                />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="40dp"
                android:layout_height="40sp"
                android:gravity="center"
                android:padding="5sp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Qty"
                    android:textSize="20dp"
                    android:textColor="@color/black"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="40sp"
                android:gravity="center"
                android:padding="4dp">

                <EditText
                    android:layout_width="40sp"
                    android:layout_height="40sp"
                    android:textColor="@color/black"
                    android:textSize="20sp"/>

            </LinearLayout>


        </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>